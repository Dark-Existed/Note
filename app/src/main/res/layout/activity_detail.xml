<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_detail"
        layout="@layout/toolbar_item"/>

    <EditText
        android:id="@+id/title_EditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_detail"
        android:background="@null"
        android:padding="12dp"
        android:maxLines="1"
        android:hint="标题"
        android:textSize="20sp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/time_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_EditView"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/text_gray"/>

    <EditText
        android:id="@+id/content_EditView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/time_TextView"
        android:background="@null"
        android:hint="请输入内容"
        android:gravity="top"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="48dp"/>


    <HorizontalScrollView
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <ImageButton
                android:id="@+id/bold"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_bold"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/italic"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_italic"
                android:scaleType="center"
                android:background="?android:selectableItemBackground" />
            <ImageButton
                android:id="@+id/underline"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_underline"
                android:scaleType="center"
                android:background="?android:selectableItemBackground" />
            <ImageButton
                android:id="@+id/strikethrough"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_strikethrough"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/foregroundColor"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_foreground"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/backgroundColor"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_background"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/superscript"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_superscript"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/subscript"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_subscript"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>
            <ImageButton
                android:id="@+id/clear"
                android:contentDescription="@null"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_format_clear"
                android:scaleType="center"
                android:background="?android:selectableItemBackground"/>

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>
